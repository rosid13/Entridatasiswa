rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Pastikan pengguna terotentikasi sebelum mencoba membaca peran
      return request.auth != null && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    match /siswa/{studentId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /userRoles/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.role == 'user';
      // Hanya admin yang bisa mengubah peran seseorang
      allow update: if isAdmin();
    }
    
    match /correctionRequests/{requestId} {
      // Pengguna terotentikasi dapat membuat permintaan
      allow create: if isAuthenticated();
      // Hanya admin yang dapat membaca dan memperbarui (untuk menyetujui/menolak)
      allow read, update: if isAdmin();
      // Hapus tidak diizinkan untuk menjaga jejak audit
      allow delete: if false;
    }
  }
}
