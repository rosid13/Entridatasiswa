rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /userRoles/{userId} {
      // Pengguna dapat membaca peran mereka sendiri. Admin dapat membaca peran apa pun.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin');
      // Pengguna dapat membuat dokumen peran mereka sendiri saat login pertama kali.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Hanya admin yang dapat memperbarui peran.
      allow update: if request.auth != null && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';
      // Peran tidak boleh dihapus.
      allow delete: if false;
    }

    match /siswa/{studentId} {
      // Setiap pengguna yang terautentikasi dapat membaca dan membuat data siswa.
      allow read, create: if request.auth != null;
      // Hanya admin yang dapat memperbarui atau menghapus data siswa.
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
