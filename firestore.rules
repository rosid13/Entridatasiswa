rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan untuk data siswa
    match /siswa/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Aturan untuk peran pengguna
    match /userRoles/{userId} {
      // Pengguna dapat membaca perannya sendiri
      allow get: if request.auth.uid == userId;

      // Pengguna dapat membuat dokumen perannya saat pertama kali login
      allow create: if request.auth.uid == userId;

      // Hanya admin yang dapat memperbarui peran pengguna lain
      allow update: if request.auth != null && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';

      // Hanya admin yang dapat melihat daftar semua peran
      allow list: if request.auth != null && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
