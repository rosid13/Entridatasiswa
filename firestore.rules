rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rules for user roles
    match /userRoles/{userId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow create: if request.auth != null;
        allow update: if isAdmin();
    }

    // Rules for student data
    match /siswa/{studentId} {
      allow read, create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Rules for correction requests
    match /correctionRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || request.auth.uid == resource.data.requestedByUserId;
      allow update, delete: if isAdmin();
    }
  }
}
